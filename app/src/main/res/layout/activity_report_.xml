<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".Report_"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width    =   "match_parent"
            android:layout_height   =   "wrap_content"
            android:orientation     =   "horizontal">

            <ImageView
                android:id              =   "@+id/goback"
                android:layout_width    =   "40dp"
                android:layout_height   =   "35dp"
                android:src             =   "@drawable/go_back"
                android:layout_gravity  =   "center"
                android:layout_marginLeft=  "20dp"/>

            <TextView
                android:layout_width    =   "match_parent"
                android:layout_height   =   "wrap_content"
                android:text            =   "Report Case"
                android:layout_weight   =   "1"
                android:textSize        =   "35sp"
                android:paddingTop      =   "30dp"
                android:paddingBottom   =   "30dp"
                android:fontFamily      =   "@font/quicksand_semibold"
                android:textColor       =   "@color/colorPrimary"/>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/call"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/make_call"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="1dp"/>

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/whatsapp"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/whatsapp"
                    app:sriv_border_color="@color/colorPrimaryDark"
                    app:sriv_border_width="2dip"
                    app:sriv_left_bottom_corner_radius="100dip"
                    app:sriv_left_top_corner_radius="100dip"
                    app:sriv_oval="false"
                    app:sriv_right_bottom_corner_radius="100dip"
                    app:sriv_right_top_corner_radius="100dip" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="20dp">

<!--                    <ImageView-->
<!--                        android:layout_width="50dp"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:src="@drawable/complain"-->
<!--                        android:layout_gravity="center"/>-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report suspected case"
                        android:fontFamily="@font/quicksand_regular"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"/>

                    <EditText
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:hint="Subject"
                        android:text="Suspected Case"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/quicksand_medium"
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        android:background="@android:drawable/editbox_background"/>

                    <MultiAutoCompleteTextView
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Message"
                        android:minHeight="80dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:inputType="textMultiLine"
                        android:background="@android:drawable/editbox_background"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experiencing any of these symptoms?"
                        android:fontFamily="@font/quicksand_bold"
                        android:textSize="14sp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tick as many as apply"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fever"
                            android:fontFamily="@font/quicksand_regular"/>

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dry Cough"
                            android:fontFamily="@font/quicksand_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tiredness"
                            android:fontFamily="@font/quicksand_regular"/>

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="aches and pains"
                            android:fontFamily="@font/quicksand_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sore throat"
                            android:fontFamily="@font/quicksand_regular"/>

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="diarrhoea"
                            android:fontFamily="@font/quicksand_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="conjunctivitis"
                            android:fontFamily="@font/quicksand_regular"/>

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="headache"
                            android:fontFamily="@font/quicksand_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="loss of taste or smell"
                            android:fontFamily="@font/quicksand_regular"/>

                    </LinearLayout>

                    <CheckBox
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="a rash on skin, or discolouration of fingers or toes"
                        android:fontFamily="@font/quicksand_regular"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="difficulty breathing or shortness of breath"
                        android:fontFamily="@font/quicksand_regular"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="chest pain or pressure"
                        android:fontFamily="@font/quicksand_regular"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="loss of speech or movement"
                        android:fontFamily="@font/quicksand_regular"/>

                    <Button
                        android:id="@+id/send"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Continue"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:layout_marginTop="50dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
